<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book), class: "show_#{book.id}" %></td>
      <td><%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "deta-confirm" => "Are you sure?", class: "destroy_#{book.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<div id="error_explanation">
  <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 <% end %>
</div>

<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
